{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "vue": [
        "./node_modules/vue"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/theme.js"
  ]
}